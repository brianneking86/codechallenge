<html>
  <head>
    <title>My Angular App!</title>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css'>
  </head>
  <body ng-app="codechallengeApp" ng-controller="MainCtrl">
    <section class="wrapper">
      <div>
        <h1>{{greeting}}</h1>
      </div>
      <br>
      <h3>Upload a file</h3>
      <form ng-submit="addFile()" class="upload">
        <input type="file" placeholder="Add File" ng-model="file" id="file-chooser"></input>
        <br>
        <button type="submit">Post</button>
      </form>
      <br>
      <h3> Your files </h3>
      <div class="file-names">
        <table class="table">
          <thead class="theader">
            <th class="left">Files</th>
            <th class="middle"></th>
            <th class="right"></th>
          </thead>
          <tbody>
            <tr ng-repeat="file in files">
              <td class="left">
                <a ng-click="download(file)">{{file.Key}}</a>
              </td>
              <td class="middle">
                <form ng-submit="deleteFile(file)">
                  <button type="submit">Delete</button>
                </form>
              </td>
              <td class="right">
                <span class="rename-file">Rename</span>
                <div class="update-file">
                  <form ng-submit="renameFile(file)" >
                    <input type="text" id="newFile" placeholder="ex: sample.txt"></input>
                    <button type="submit">Update</button>
                  </form>
                </div>
                <div class="cancel">X</div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
  </body>
</html>